{% extends 'subLayout.html.twig' %}

{% block content %}
    <div class="main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel">
                        <div class="panel-body">
                            <form method="post">
                                <div class="form-group">
                                    <p>Belum Tervalidasi</p>
                                    <input type="radio" name="validate" value="0" {% if data.isValidated == 0 %}checked{% endif %}>
                                </div>
                                <div class="form-group">
                                    <p>Tervalidasi</p>
                                    <input type="radio" name="validate" value="1" {% if data.isValidated == 1 %}checked{% endif %}>
                                </div>
                                <button type="submit" class="btn btn-primary">SIMPAN</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}