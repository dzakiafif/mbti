{% extends 'subLayout.html.twig' %}

{% block title %}Profile{% endblock %}

{% block content %}
    <div class="main-content">
        <div class="container-fluid">
                <div class="clearfix">
                    <!-- LEFT COLUMN -->
                    <div class="profile-left col-md-2 col-md-offset-4">
                        <!-- PROFILE HEADER -->
                        <div class="profile-header">
                            <div class="overlay"></div>
                            <div class="profile-main">
                                {% if app.user.profilePicture is null %}
                                    <img src="{{ asset('backend') }}/img/user-medium.png" class="img-circle" alt="Avatar">
                                {% else %}
                                    <img src="{{ asset('uploads') }}/images/profile/{{ app.user.profilePicture }}" height="150" class="img-circle" alt="">
                                {% endif %}
                                <h3 class="name">{% if app.user.username is defined %}{{ app.user.username }}{% else %}-{% endif %}</h3>
                            </div>
                        </div>
                        <!-- END PROFILE HEADER -->
                        <!-- PROFILE DETAIL -->
                        <div class="profile-detail">
                            <div class="profile-info">
                                <h4 class="heading">Basic Info</h4>
                                <ul class="list-unstyled list-justify">
                                    <li>Nama <span>{% if app.user.nama is defined %}{{ app.user.nama }}{% else %}-{% endif %}</span></li>
                                    <li>Email <span>{% if app.user.email is defined %}{{ app.user.email }}{% else %}-{% endif %}</span></li>
                                    <li>Alamat <span>{% if app.user.alamat is defined %}{{ app.user.alamat }}{% else %}-{% endif %}</span></li>
                                    <li>No.HP <span>{% if app.user.noHp is defined %}{{ app.user.noHp }}{% else %}-{% endif %}</span></li>
                                </ul>
                            </div>
                            <div class="text-center"><a href="{{ path('irin_user_update') }}" class="btn btn-primary">Edit Profile</a></div>
                        </div>
                        <!-- END PROFILE DETAIL -->
                    </div>
                    <!-- END LEFT COLUMN -->
                    <!-- RIGHT COLUMN -->

                    <!-- END RIGHT COLUMN -->
                </div>

        </div>
    </div
{% endblock %}